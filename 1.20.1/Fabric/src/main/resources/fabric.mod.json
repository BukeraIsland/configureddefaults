  "version": "${modVersion}",

  "name": "${modName}",
  "description": "${modDescription}",

  "authors": [
    "${modAuthor}"
  ],
  
  "contact": {
    "homepage": "${modPageUrl}",
    "issues": "${modIssueUrl}",
    "sources": "${modPageUrl}"
